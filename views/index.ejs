<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <!-- linking the icons from 'font awesome' -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />

    <!-- linking external fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- App CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/listsNavigation.css" type="text/css" />

    <!-- App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="scripts/user-avatar.js"></script>
    <script type="text/javascript" src="scripts/create-new-task-list.js"></script>


  </head>




  <body>
    <!-- fixed header - shows logo and -->
    <nav>
      <img class="logo" src="/images/logo-2c.png">

      <div id="user-settings">

        <div>
          <img class="avatar" src="/images/avatar-1.png">
        </div>

        <div id="user-dropdown-content">
          <p>username</p>
          <a href="#">Personal settings</a>
          <a href="#">Log out</a>
        </div>
      </div>

    </nav>


    <!-- user lists -->
    <div id=main>
      <div id=sidebar>
        <h2>My Tasks</h2>
        <ul>
          <a href="#"><li><i class="fas fa-list"></i>All tasks</li></a>
          <a href="#"><li><i class="fas fa-video"></i>Films/series to watch</li></a>
          <a href="#"><li><i class="fas fa-utensils"></i>Restaurants to eat at</li></a>
          <a href="#"><li><i class="fas fa-book"></i>Books to read</li></a>
          <a href="#"><li><i class="fas fa-shopping-cart"></i>Products to buy</li></a>
        </ul>
      </div>

      <div class="main-information">

        <div class="see-and-create">
          <section id=tasks-list>
            <h1>Films</h1>
            <article class="task">

              <div class="checkbox-and-title">
                <div class="task-checkbox"><i class="fas fa-check"></i></div>
                <p>Film 1</p>

              </div>

              <div class="delete-and-edit-icons">
                <i class="fas fa-edit"></i>
                <i class="far fa-trash-alt"></i>
              </div>

            </article>

            <article class="task">

              <div class="checkbox-and-title">
                <div class="task-checkbox"><i class="fas fa-check"></i></div>
                <p>Film 1</p>

              </div>

              <div class="delete-and-edit-icons">
                <i class="fas fa-edit"></i>
                <i class="far fa-trash-alt"></i>
              </div>

            </article>


          </section>


          <section id="create-new-task">
            <article>
              <p id="create-task-title">Create a new task</p>

              <div class="tags">
                <button type="submit" class="tag-important">
                  <p>Important</p>
                  <i class="fas fa-times"></i>
                </button>

                <button type="submit" class="tag-school">
                  <p>School</p>
                  <i class="fas fa-times"></i>
                </button>

                <button type="submit" class="tag-create">
                  <p>Add tag</p>
                </button>

              </div>


              <form action="/edit/:id" method="POST">

                <textarea type="text" id="task-title" placeholder="input task"></textarea>

                <div class="cateogry-dropdown">
                  <p>Category:</p>
                  <a href="#">Films/series</a>
                  <a href="#">Restaurants</a>
                  <a href="#">Books</a>
                  <a href="#">Products</a>

                </div>

<!--
                <ul class="new-list-item">

                  <li>
                    <textarea type="text" id="task-content" placeholder="Task content"></textarea>

                  </li>
                  <i class="fas fa-plus"></i>


                </ul>

                <section class="new-items"> -->
                  <!-- new items get prepended here -->
                <!-- </section> -->


                <div id="task-additional-features">

                  <div class="task-reminder">
                    <i class="fas fa-bell"></i>
                    <p>Reminder</p>
                  </div>


                  <div class="task-calendar-date">
                    <i class="far fa-calendar-alt"></i>
                    <p>Due date</p>
                  </div>


                  <div class="task-share">
                    <i class="fas fa-share-square"></i>
                    <p>Share</p>
                  </div>


                </div>



                <button type="submit" class="new-task-button">Submit</button>


              </form>


            </article>



          </section>

        </div>
      </div>
    </div>
  </body>
</html>
