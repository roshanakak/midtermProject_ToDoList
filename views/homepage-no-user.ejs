<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Home Page</title>

    <!-- linking the icons from 'font awesome' -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />


    <!-- linking external fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300;400;500&display=swap" rel="stylesheet">


    <!-- App CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/homepage-no-user/layout-homepage-no-user.css" type="text/css" />

    <!-- App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/registerModal.js"></script>
    <script type="text/javascript" src="scripts/resetInputForm.js"></script>


  </head>


  <body>

    <!-- fixed header - shows logo and avatar -->
    <nav>
      <img class="logo" src="/images/logo-2c.png">
    </nav>

    <div class="main">

      <!-- the register modal -->
        <!-- if user came from 'registration button', show this page with the registration modal -->
      <div class="register-modal-root" style=

        <% if (registerModal === 'visible') { %>
          "visibility: visible;">
        <% } else if (registerModal === 'hidden') { %>
          "z-index: -1;">
        <% } %>
        <div id="register-modal" class="modal">

          <!-- the modal content -->
          <div class="register-modal-header">

            <!-- x for closing the modal -->
            <i class="fas fa-times" id="register-modal-close"></i>
            <h1>Register an account</h1>
          </div>


          <form action="/register" method="POST">
            <div class="register-modal-body">

              <p>username:</p>
              <input type="text" id="register-username" name="username"></input>

              <p>email:</p>
              <input type="text" id="register-email" name="email"></input>

              <p>password:</p>
              <input type="password" id="register-password" name="password"></input>
              <span id="error-msg"></span>

              <div class="sign-in-submit-buttons">
                <div class="register-sign-in-button">
                  <p>Already have an account?</p>
                  <a href="/login">Sign in</a>
                </div>
                <button type="submit" id="register-submit-button">Submit</button>

              </div>
            </div>
          </form>
        </div>
      </div>


      <div class="spacer"></div>

      <h1>Ready to start making lists?</h1>


      <div class="log-in-register-buttons">

        <form action="/login " method="get">
          <button type="submit" class="log-in-button">Log in</button>
        </form>

        <button class="register-button">Register</button>

      </div>



    </div>

  </body>




</html>
