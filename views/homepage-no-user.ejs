    <!-- App JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/registerModal.js"></script>

  </head>


  <body>

  <!-- fixed header - shows logo and avatar -->
  <nav>
    <img class="logo" src="/images/logo-2c.png">
  </nav>

  <div class="main">

    <!-- the register modal -->
    <div id="register-modal" class="modal">

      <!-- the modal content -->
      <div class="register-modal-header">

        <!-- x for closing the modal -->
        <i class="fas fa-times" id="register-modal-close"></i>
        <h1>Register an account</h1>
      </div>

      <div class="register-modal-body">

        <p>username:</p>
        <input type="text" id="register-username"></input>

        <p>email:</p>
        <input type="text" id="register-email"></input>

        <p>password:</p>
        <input type="password" id="register-password"></input>

        <div class="sign-in-submit-buttons">
          <div class="register-sign-in-button">
            <p>Already have an account?</p>
            <a href="#">Sign in</a>
          </div>
          <button type="submit" id="register-submit-button">Submit</button>
        </div>
      </div>

    </div>





    <div class="spacer"></div>

    <h1>Ready to start making lists?</h1>


    <div class="log-in-register-buttons">

      <button type="submit" class="log-in-button">Log in</button>

      <button type="submit" class="register-button">Register</button>

    </div>



  </div>









